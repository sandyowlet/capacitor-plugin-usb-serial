{
  "name": "capacitor-serial-plugin",
  "version": "1.0.0",
  "description": "This plugin can be used for reading data from other device over the usb channel",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "type": "module",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "UsbSerialPlugin.podspec"
  ],
  "author": "asad96",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandyowlet/capacitor-plugin-usb-serial.git"
  },
  "bugs": {
    "url": "https://github.com/sandyowlet/capacitor-plugin-usb-serial/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api UsbSerialPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "android:fix": "cd android && ./gradlew clean && ./gradlew wrapper --gradle-version 8.11.1 && ./gradlew && cd .."
  },
  "devDependencies": {
    "@capacitor/android": "^7.1.0",
    "@capacitor/cli": "^7.1.0",
    "@capacitor/core": "^7.1.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "prettier-plugin-java": "^2.6.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.36.0",
    "swiftlint": "^2.0.0",
    "typescript": "~5.5.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.1.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}